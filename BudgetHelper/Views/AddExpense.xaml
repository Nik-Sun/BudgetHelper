<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetHelper.Views.AddExpense"
             Title="AddExpense">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            HeightRequest="80"
            VerticalOptions="Start"
               >
            <Picker 
                  Style="{StaticResource Picker}"
                  FontSize="Large"
                  x:Name="ExpenseList"
                  
                  Title="Select a category for the expense:"
                  SelectedIndexChanged="OnPickerSelectedIndexChanged"/>
        </Border>

        <Border
                BackgroundColor="LightGray"
                Grid.Row="1">
            <Entry
                
                 HorizontalTextAlignment="Center"
                 FontSize="50"
                 Keyboard="Numeric"
                 x:Name="ExpenseValue"/>
        </Border>
        <Border
            VerticalOptions="End"
            Grid.Row="2">
            <Button 
                HeightRequest="100"
                Text="Save"
                Clicked="SaveButtonClicked"/>
        </Border>

    </Grid>




</ContentPage>