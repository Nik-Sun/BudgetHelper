<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dx="http://schemas.devexpress.com/maui"
             xmlns:local="clr-namespace:BudgetHelper.Models"
             x:Class="BudgetHelper.Views.AboutPage">
    <ContentPage.BindingContext>
        <local:ViewModel/>
    </ContentPage.BindingContext>
    <VerticalStackLayout Spacing="10" Margin="10">
        <dx:PieChartView>
            <dx:PieChartView.Series>
                <dx:DonutSeries>
                    <dx:DonutSeries.Data>
                        <dx:PieSeriesDataAdapter DataSource="{Binding LandAreas}"
                                         LabelDataMember="CountryName"
                                         ValueDataMember="Area"/>
                    </dx:DonutSeries.Data>
                    <!-- ... -->
                </dx:DonutSeries>
            </dx:PieChartView.Series>
        </dx:PieChartView>
    </VerticalStackLayout>
</ContentPage>