<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BudgetHelper.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BudgetHelper.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="BudgetHelper">

    <TabBar>


        <Tab Title="Главно меню" x:Name="MainPageSection" Icon="{OnPlatform 'home.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}">
            <ShellContent
                x:Name="NotesTab"
                Title="Home"
                Route="MainPage"
                ContentTemplate="{DataTemplate views:MainPage}"/>
        </Tab>
        <Tab Title="Разходи" x:Name="ExpensesSection" Icon="{OnPlatform 'coins.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}">
            <ShellContent
                Title="This month expenses"
                Route="ExpensePage"
                ContentTemplate="{DataTemplate views:ExpensePage}"/>
        </Tab>
        <Tab Title="Добави разход" x:Name="AddExpenseSection" Icon="{OnPlatform 'send_money.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}">
            <ShellContent
                Route="Add Expense"
                Title="Add expense"
                ContentTemplate="{DataTemplate views:AddExpense}"/>
        </Tab>

    </TabBar>

</Shell>
